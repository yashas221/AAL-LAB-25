#include <stdio.h>
#include <stdlib.h>

int main()
{
    char string[]="Nobody noticed Him";

    int length=strlen(string);
    char pat[]="Him";
    int index=0;
    int len=strlen(pat);
    int i,j;
    for(i=0;i<(length-len+1);i++){
            int count=0;
            index=i;
        for(j=i;j<i+len;j++){

                if (string[j]==pat[count]){
                        count+=1;}
                else{
                    break;
                }
        }
    }
    printf("Target %s Found in %d position",pat,index+1);
    return 0;
}

output: Target "Him" found at position 16
